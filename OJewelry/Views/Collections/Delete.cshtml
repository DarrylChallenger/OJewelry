@model OJewelry.Models.Collection

@{
    ViewBag.Title = "Delete";
}

<h2>Delete the <i>@Model.Name</i> Collection?</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Collection Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Company Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary(null, new { @class = "text-danger" })
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <div>
                @Html.ActionLink("Back to List", "Index", new { CompanyId = Model.CompanyId })
            </div>
        </div>
    }
</div>
