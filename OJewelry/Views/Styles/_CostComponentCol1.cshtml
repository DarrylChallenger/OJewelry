@model OJewelry.Models.StyleViewModel
@using OJewelry.Models

@*Use CCRowIndex to determine which x button was pressed*@
<div class="col-sm-1 ">
    <div class="row StyleComponentsRowHeaderBtn ">
        @if (Model.CCHeaderRow)
        {
            if (Model.CCLastRow)
            {
                <div class="col-sm-6">
                    <button type="button" class="btn btn-default" onclick="AddComponentRow('@Model.SVMCCType',  @Model.CCRowIndex)">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
            }
            else
            {
                <div class="col-sm-6"></div>
            }
        }
        else
        {
            if (Model.CCLastRow)
            {
                <div class="col-sm-6 ">
                    <button type="button" class="btn btn-default" onclick="AddComponentRow('@Model.SVMCCType',  @Model.CCRowIndex)">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
            }
            else
            {
                <div class="col-sm-6"></div>
            }
            <div class="col-sm-6">
                <button type="button" class="btn btn-default" onclick="RemoveComponentRow('@Model.SVMCCType', @Model.i)">
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </div> <!-- make into button and handle in js/ajax?  -->
        }

    </div>
</div>

