@model IEnumerable<OJewelry.Models.Company>

@{
    ViewBag.Title = "Companies";
}

<h2>Company List for <i>@ViewBag.UserName</i></h2>

<p>
    @Html.ActionLink("Create New Company", "Create", new { @companyId = ViewBag.companyId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Assortment", "Index", "Collections", new { CompanyId = item.Id }, null) |
            @Html.ActionLink("Stones", "Index", "Stones", new { CompanyId = item.Id }, null) |
            @Html.ActionLink("Findings", "Index", "Findings", new { CompanyId = item.Id }, null) |
            @Html.ActionLink("Assembly Costs", "Edit", "AssemblyCosts", new { CompanyId = item.Id }, null) |
            @Html.ActionLink("Locations", "Index", "Presenters", new { companyId = item.Id }, null) |
            @Html.ActionLink("Inventory", "Inventory", new { CompanyId = item.Id })
        </td>
    </tr>
}

</table>
