@model OJewelry.Models.CompanyViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create a Company</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Company</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.company.Name, htmlAttributes: new { @class = "control-label col-md-1" })
        <div>
            @Html.EditorFor(model => model.company.Name, new { htmlAttributes = new { @class = "form-control col-md-2" } })
        </div>
    </div>

    <div class="form-group">
        @Html.ValidationMessageFor(model => model.company.Name, "", new { @class = "text-danger" })
    </div>

    @if (Model != null && Model.clients != null)
    {
        <h4>Clients</h4>
        foreach (var c in Model.clients)
        {
            <div class="form-group">
                @Html.LabelFor(model => c.Name, htmlAttributes: new { @class = "control-label col-md-1" })
                <div>
                    @Html.EditorFor(model => c.Name, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                </div>
                @Html.LabelFor(model => c.Phone, htmlAttributes: new { @class = "control-label col-md-1" })
                <div>
                    @Html.EditorFor(model => c.Phone, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                </div>
                @Html.LabelFor(model => c.Email, htmlAttributes: new { @class = "control-label col-md-1" })
                <div>
                    @Html.EditorFor(model => c.Email, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                </div>
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(model => c.Name, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => c.Phone, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => c.Email, "", new { @class = "text-danger" })
            </div>
        }
    }


    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
