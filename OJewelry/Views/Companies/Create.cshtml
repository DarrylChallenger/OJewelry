@model OJewelry.Models.CompanyViewModel

@{
    ViewBag.Title = "Create Company";
}

<h2>Create a Company</h2>


@using (Html.BeginForm("Create", "Companies", FormMethod.Post, new { id = "CompaniesForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Company</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Partial("_CompanyCreateEditInputs", Model)
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Index", "Companies", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/RowManager.js")
    @Scripts.Render("~/Scripts/SetupContacts-Companies.js")
    @Scripts.Render("~/Scripts/FormatPhone.js")
}
