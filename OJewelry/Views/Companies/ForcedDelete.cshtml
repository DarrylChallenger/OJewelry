@model OJewelry.Models.Company

@{
    ViewBag.Title = @Model.Name + " - Delete Company";
}

<h2>Delete Company - <i>@Model.Name</i></h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm("ForcedDelete"))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary(null, new { @class = "text-danger" })
        </div>
        
        <h4 class="text-danger">The entire company and all it's items will be deleted!</h4>

        <div class="form-actions no-color">
            <input type="submit" value="Forced Delete" class="btn btn-default" />
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</div>
