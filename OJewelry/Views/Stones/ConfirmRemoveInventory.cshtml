@model IEnumerable<OJewelry.Models.Stone>

@{
    ViewBag.Title = "Remove Inventory";
}

<h2>Remove Stones Inventory</h2>

<h3>Are you sure you want to clear the Stone inventory for <i>@ViewBag.companyName</i>?</h3>
<p>Stone Inventory will be cleared to 0.  You will not be able to retrieve it once you confirm.</p>

@using (Html.BeginForm("RemoveInventory", "Stones"))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("companyId", (int)ViewBag.companyId)
    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Confirm" />
        <input class="btn btn-default" type="submit" value="Cancel" formaction="~/Stones/Index" formmethod="get" />
    </div>
}
