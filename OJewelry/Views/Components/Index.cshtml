@model IEnumerable<OJewelry.Models.Component>

@{
    ViewBag.Title = "Index";
}

<h2>Components for <i>@ViewBag.CompanyName</i></h2>

<p>
    @Html.ActionLink("Create New", "Create", new { CompanyId = @ViewBag.Id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerPiece)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetalMetal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetalLabor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StonesCtWt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StoneSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StonePPC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FindingsMetal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComponentType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerPiece)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetalMetal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetalLabor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StonesCtWt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoneSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StonePPC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FindingsMetal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>

    }

</table>
@Html.ActionLink("Companies List", "Index", "Companies")
