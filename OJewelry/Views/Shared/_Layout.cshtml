<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OJewelry</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{
        string bgcolor = "";
        string homeLnk = "Home";
        if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Staging") { bgcolor = "StagingBGcolor"; homeLnk = "Staging"; }
        if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development") { bgcolor = "DevBGcolor"; homeLnk = "Dev";  }
        if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == null) { bgcolor = "DevBGcolor"; ; homeLnk = "Dev"; }
    }
    <div class="navbar navbar-fixed-top @bgcolor ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*                <a class="navbar-brand" href="/"><img src="~/Images/logo.png" height="24"/></a>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(homeLnk, "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @Html.Partial("_AdminPartial")
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OJewelry</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
