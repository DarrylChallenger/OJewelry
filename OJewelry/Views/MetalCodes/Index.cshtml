@model IEnumerable<OJewelry.Models.MetalCode>

@{
    ViewBag.Title = "Index";
}

<h2>Metals</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @companyId = ViewBag.companyId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Market)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Multiplier)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Market)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Multiplier)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Export Metals to Excel", "ExportMetalsReport", new { companyId = ViewBag.companyId })


<div class="row">
    <div class="col-sm-4">
        @Html.ActionLink("Companies", "Index", "Companies")
    </div>
</div>